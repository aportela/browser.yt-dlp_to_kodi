{
  "manifest_version": 2,
  "name": "yt-dlp to kodi",
  "version": "0.10",
  "description": "Download & play videos on kodi using yt-dlp",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "48": "icon.png"
  },
  "permissions": ["tabs", "storage", "http://*/", "https://*/"]
}
