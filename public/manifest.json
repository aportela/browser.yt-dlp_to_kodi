{
  "manifest_version": 3,
  "name": "yt-dlp to kodi",
  "version": "0.11",
  "description": "Download & play videos on kodi using yt-dlp",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "48": "icon.png"
  },
  "permissions": ["tabs", "storage"],
  "host_permissions": ["http://*/", "https://*/"],
  "browser_specific_settings": {
    "gecko": {
      "id": "{41c7a24f-007f-5a7e-95f3-38ed2941dacd}"
    }
  }
}
